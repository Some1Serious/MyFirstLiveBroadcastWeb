<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ClassesMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.pojo.Classes">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="teacherId" column="teacher_id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
            <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="Union" type="com.example.demo.pojo.Classes">

        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="teacherId" column="teacher_id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
        <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
        <result property="teacherName" column="nickname"/>

    </resultMap>

    <sql id="Base_Column_List">
        id,teacher_id,name,
        description,start_time,end_time
    </sql>


    <select id="selectAllClassesByStudentId" resultMap="Union">

            select classes.id, classes.name,classes.teacher_id, classes.description, start_time, end_time, user.nickname from classes, livebroadcast.user where classes.teacher_id = user.id and classes.id in (

            select class_id from schedules where student_id = #{studentId}

        )

    </select>


</mapper>
